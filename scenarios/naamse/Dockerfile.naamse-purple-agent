FROM ghcr.io/astral-sh/uv:python3.12-alpine

RUN apk --no-cache add curl

RUN adduser -D agentbeats
USER agentbeats
WORKDIR /home/agentbeats/naamse

RUN --mount=type=cache,target=/home/agentbeats/.cache/uv,uid=1000 \
    uv venv && \
    uv pip install python-a2a google-genai python-dotenv

COPY --chown=agentbeats:agentbeats scenarios scenarios
COPY --chown=agentbeats:agentbeats util util

ENTRYPOINT ["uv", "run", "util/a2a_agent.py"]
CMD ["--host", "0.0.0.0", "--port", "9009", "--card-url", "http://agent:9009"]
EXPOSE 9009